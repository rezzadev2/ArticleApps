<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/backgroundActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.rezzza.articleapps.ui.MainSplashActivity">


    <androidx.cardview.widget.CardView
        app:cardCornerRadius="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="43dp">
            <ImageView
                android:id="@+id/imvw_search"
                android:src="@drawable/search"
                android:layout_marginStart="15dp"
                android:layout_centerVertical="true"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <TextView
                android:id="@+id/txvw_search"
                android:visibility="gone"
                android:textColor="@color/text3"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/search_news"
                android:layout_marginStart="10dp"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/imvw_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edtx_search"
                android:textColor="@color/text2"
                android:fontFamily="@font/roboto"
                android:textSize="14sp"
                android:hint="@string/search_news"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_toEndOf="@+id/imvw_search"
                android:background="#00ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/imvw_clear"
                android:layout_marginEnd="5dp"
                android:padding="10dp"
                android:src="@drawable/ic_baseline_clear_24"
                android:layout_alignParentEnd="true"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                app:tint="#CC000000" />

            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/mrly_serach"
                app:mrl_rippleDuration="200"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.balysv.materialripple.MaterialRippleLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>